<resources>
    <!-- Base application theme. -->
    <style name="Theme.Hisarapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/medium_grey</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>